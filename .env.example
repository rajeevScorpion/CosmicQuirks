# Cosmic Quirks Environment Configuration Template
# Copy to .env.local and fill in your values

# ===== CORE APP CONFIG =====
# Production site URL - use localhost for development
NEXTAUTH_URL=http://localhost:3000
DEV_PORT=3000

# ===== AI & OPENROUTER CONFIG =====
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TEXT_MODEL=openai/gpt-4o-mini
OPENROUTER_IMAGE_MODEL=google/gemini-2.5-flash-image-preview
ENABLE_AI_IMAGE_GENERATION=true

# ===== SUPABASE AUTH & DATABASE =====
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ===== USAGE LIMITS =====
UNREGISTERED_DAILY_LIMIT=100
REGISTERED_DAILY_LIMIT=10  
PREMIUM_DAILY_LIMIT=50
NEXT_PUBLIC_UNAUTH_RESULT_LIMIT=100

# Form types available to different user tiers
UNREGISTERED_FORMS=fortune
REGISTERED_FORMS=fortune,matchmaking,birthday,career,travel
PREMIUM_FORMS=fortune,matchmaking,birthday,career,travel

# Skip rate limits in development
SKIP_RATE_LIMITS=true

# ===== IMAGE OPTIMIZATION =====
MINIMUM_IMAGE_QUALITY=60
ENABLE_DYNAMIC_QUALITY_ADJUSTMENT=true
SIZE_OPTIMIZATION_ITERATIONS=5

# ===== ASSET MANAGEMENT =====
MIN_ASSET_POOL_SIZE=100
ASSET_REUSE_COOLDOWN_DAYS=7